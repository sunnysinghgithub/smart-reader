doctype html
html(lang="en")
	head
		block title
			title = Welcome!
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		link(href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.css", rel="stylesheet")
		link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css", rel="stylesheet")
		link(href="/stylesheets/home.css", rel="stylesheet")
		link(href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.css", rel="stylesheet")
		link(href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-switch/3.3.2/css/bootstrap3/bootstrap-switch.min.css", rel="stylesheet")
		link(href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css", rel="stylesheet")
		link(href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-social/4.10.1/bootstrap-social.min.css", rel="stylesheet")
		script(src="https://code.jquery.com/jquery-2.1.4.min.js")
		script(src="/javascripts/home.js")
		script(src="http://fgnass.github.io/spin.js/spin.min.js")
		script(src="http://kjur.github.io/jsrsasign/jsrsasign-latest-all-min.js")
		script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.pack.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-switch/3.3.2/js/bootstrap-switch.min.js")
	body
		canvas.relatedWordsCanvas
		div.container
			nav.navbar.navbar-default.navbar-custom.navbar-fixed-top
				div.container
					div.navbar-header
						button.navbar-toggle.collapsed(data-toggle="collapse",data-target="#navbar",aria-expanded="false",aria-controls="navbar")
							span.sr-only
								| Toggle navigation
							span.icon-bar
							span.icon-bar
							span.icon-bar
						a.navbar-brand(href="/home")
							| SmartReader
					div#navbar.navbar-collapse.collapse
						ul.nav.navbar-nav
							li.active
								button#btn-home.btn.btn-default.btn-sm.navbar-btn
									span.glyphicon.glyphicon-home
									|   Home
							li
								button.btn.btn-default.btn-sm.navbar-btn
									span.glyphicon.glyphicon-option-horizontal
									|   About
							li
								button#btn-chromeex.btn.btn-default.btn-sm.navbar-btn
									span.glyphicon.glyphicon-new-window
									|  Chrome Extension
						ul.nav.navbar-nav.navbar-right
							if user
								li
									p.navbar-text
										| #{user.fname} #{user.lname}
								li
									button#btn-logout.btn.btn-default.btn-sm.navbar-btn
										|   Logout
							else
								li
									button#btn-login-overlay.btn.btn-default.btn-sm.navbar-btn
										span.glyphicon.glyphicon-user
										|   Sign in
								li
									button#btn-register-overlay.btn.btn-default.btn-sm.navbar-btn
										span.glyphicon.glyphicons-plus
											| +
										|   Sign up

		div.content
			block content
			div.collapse
				div#login
					div.panel.panel-primary
						div.panel-heading
							span.glyphicon.glyphicon-user
							b  Sign in
						div.panel-body
							div#login-alert.alert.alert-danger.collapse(role="alert")
								span.glyphicon.glyphicon-alert
								| 
								span.alertText
							form#form-login.form-horizontal
								div.form-group
									label.col-sm-2.control-label(for="input-login-uname")
										| Username
									div.col-sm-10
										input#input-login-uname.form-control(type="text",placeholder="Username",name="uname")
								div.form-group
									label.col-sm-2.control-label(for="input-login-password")
										| Password
									div.col-sm-10
										input#input-login-password.form-control(type="password",placeholder="Password",name="password")
								div.form-group
									div.col-sm-offset-2.col-sm-10
										div.checkbox
											label
												input(type="checkbox")
												| Remember me
								div.form-group
									div.col-sm-offset-2.col-sm-10
										button#btn-sign-in.btn.btn-default(type="submit")
											| Sign in
						div.panel-footer
							a.btn.btn-sm.btn-default.btn-social.btn-facebook.login-btn
								i.fa.fa-facebook
								| Sign in with Facebook
							a#btn-login-twitter.btn.btn-sm.btn-default.btn-social.btn-twitter.login-btn
								i.fa.fa-twitter
								| Sign in with Twitter
							a.btn.btn-sm.btn-default.btn-social.btn-google.login-btn
								i.fa.fa-google
								| Sign in with Google
				div#register
					div.panel.panel-primary
						div.panel-heading
							span.glyphicon.glyphicons-plus
								| +
							b  Sign up
						div.panel-body
							form.form-horizontal(action="/register",method="post")
								fieldset
									div.form-group
										label.col-sm-2.control-label(for="input-register-fname")
											| First Name
										div.col-sm-10
											input#input-register-fname.form-control(type="text",placeholder="First Name",name="fname")
									div.form-group
										label.col-sm-2.control-label(for="input-register-lname")
											| Last Name
										div.col-sm-10
											input#input-register-lname.form-control(type="text",placeholder="Last Name",name="lname")
									div.form-group
										label.col-sm-2.control-label(for="input-register-uname")
											| Username
										div.col-sm-10
											input#input-register-uname.form-control(type="text",placeholder="Username",name="uname")								
									div.form-group
										label.col-sm-2.control-label(for="input-register-email")
											| Email
										div.col-sm-10
											input#input-register-email.form-control(type="text",placeholder="Email",name="email")
									div.form-group
										label.col-sm-2.control-label(for="input-register-password")
											| Password
										div.col-sm-10
											input#input-register-password.form-control(type="password",placeholder="Password",name="password")
									div.form-group
										div.col-sm-offset-2.col-sm-10
											button#btn-register.btn.btn-default(type="submit")
												| Submit
		footer
			div.container
				p.small
					| Designed and developed by:
				a(href="https://www.linkedin.com/pub/sunny-singh/3b/565/a5",style="text-decoration:none;")
					span(style="font: 90% Arial,sans-serif; color:#0783B6;")
						img(src="https://static.licdn.com/scds/common/u/img/webpromo/btn_in_20x15.png" width="20" height="15" alt="View Sunny Singh's LinkedIn profile" style="vertical-align:middle;" border="0")
						| &nbsp;Sunny Singh
